{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "outDir": "./dist",               
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "moduleResolution": "node",
      "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],           
    "exclude": ["node_modules"]          
  }
  